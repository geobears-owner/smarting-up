{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "composite": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/package.json"
  ],
  "exclude": [
    "**/*.d.ts"
  ]
}
